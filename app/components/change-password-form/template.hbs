<div class="form-group">
  {{input type="password"
          class="form-control"
          id="previous"
          placeholder="Old password"
          value=passwords.previous}}
</div>

<div class="form-group">
  {{input type="password"
          class="form-control"
          id="next"
          placeholder="New password"
          value=passwords.next}}
</div>

<div class="auth-buttons">
<button type="submit" class="btn btn-primary" {{action "submit"}}>
  Change Password
</button>

<button class="btn btn-default" {{action "reset"}}>
  Cancel
</button>
</div>
